                        <a aria-hidden="true" class="thumbnail" href=""><img alt="" src="~/Content/dist/images/pub-cover-csv.png"></a>
                    </div>
                    <div class="attachment-details">
                        <h2 class="title">
                            @Html.ActionLink("SFA register of apprenticeship training providers", "Csv", "Download", null, null)
                        </h2>
                        <p class="metadata">
                            <span class="type">CSV</span>
                        </p>
                    </div>
                </section>
            </div>
        </div>
    </div>
    
    <div class="grid-row">
        <dl class="meta">
            <dt>Financial health indicators:</dt>
